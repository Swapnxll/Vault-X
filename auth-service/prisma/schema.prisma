generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String?
  profile      String?
  subscription Boolean       @default(false) // ðŸ‘ˆ new field
  role         String        @default("user") // ðŸ‘ˆ new field
  breaches     ExposedData[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model ExposedData {
  id            Int     @id @default(autoincrement())
  site          String? // optional
  description   String?
  domain        String?
  industry      String?
  logo          String?
  passwordRisk  String?
  references    String?
  searchable    String?
  verified      String?
  xposedData    String?
  xposedDate    String?
  xposedRecords Int?

  userId String
  user   Auth   @relation(fields: [userId], references: [id])
}
